@model KalleFBankALM.ViewModels.TransferViewModel

@{
	ViewData["Title"] = "MakeTransfer";
}

<h2>MakeTransfer</h2>

<form asp-controller="Transfer" asp-action="MakeTransfer" method="post">
	<div class="input-group">
		<span class="input-group-addon">Sender Account</span>
		<input type="text" asp-for="FromAccountNumber" class="form-control" placeholder="Input account no">
	</div>
	<div class="input-group">
		<span class="input-group-addon">Receiving Account</span>
		<input type="text" asp-for="ToAccountNumber" class="form-control" placeholder="Input account no">
	</div>
	<div class="input-group btn-group">
		<span class="input-group-addon">Amount SEK</span>
		<input asp-for="TransferAmount" class="form-control" placeholder="Input amount in SEK">
	</div>
	<br />
	<div class="btn-group">
		<input class="btn btn-success" type="submit" value="Transfer" />
	</div>
</form>

@if (Model.Message != null)
{
	<hr />
	<div>
		<h4 class="text-danger">@Model.Message</h4>
	</div>

	if (Model.FromAccount != null && Model.ToAccount != null)
	{
	<form class="form-horizontal">
		<div class="form-group">
			<label class="control-label col-sm-2">Sender Account no:</label>
			<div class="col-sm-10">
				<p class="form-control-static">@Model.FromAccount.AccountNumber</p>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2">New balance:</label>
			<div class="col-sm-10">
				<p class="form-control-static">@Model.FromAccount.Balance SEK</p>
			</div>
		</div>
		<p>----</p>
		<div class="form-group">
			<label class="control-label col-sm-2">Receiving Account no:</label>
			<div class="col-sm-10">
				<p class="form-control-static">@Model.ToAccount.AccountNumber</p>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2">New balance:</label>
			<div class="col-sm-10">
				<p class="form-control-static">@Model.ToAccount.Balance SEK</p>
			</div>
		</div>
	</form>
	}
}